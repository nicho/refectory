<?xml version="1.0" encoding="UTF-8"?>
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:p1="urn:import:com.google.gwt.user.cellview.client"
	xmlns:d='urn:import:com.google.gwt.user.datepicker.client'>

	<ui:style src="new2.css" field="new2"></ui:style>
	<g:HTMLPanel>
		<div class="{new2.frame-wrap}">
			<!--面包屑 [[ -->
			<g:FlowPanel ui:field="breadCrumbs" />
			<!--面包屑 ]] -->


			<h3>广播详细
			</h3>
			<span class="{new2.cutline}"></span>

			<div class="{new2.content-wrap}">
				<div class="{new2.form}">
					<div class="{new2.form-line}">
						<label class="{new2.label3}">广播内容：</label>
						<div class="{new2.element}">
							<g:TextArea ui:field="content" styleName="{new2.textarea}" enabled="false" />
						</div>
					</div>
					
					<div class="{new2.form-line}">
						<label class="{new2.label3}">接收对象：</label>
						<div class="{new2.element}">
							<g:TextArea ui:field="receivingObject" styleName="{new2.textarea}" enabled="false"/>
						</div>
					</div>

					<div class="{new2.form-line}">
						<label class="{new2.label}">广播时间：</label>
						<div class="{new2.element}">
							<g:InlineLabel ui:field="broadcastingTime" />
						</div>
					</div>
					<div class="{new2.form-line}">
						<label class="{new2.label}">广播人：</label>
						<div class="{new2.element}">
							<g:InlineLabel ui:field="createUser" />
						</div>
					</div>
					<div class="{new2.form-line}">
						<label class="{new2.label}">回复设置：</label>
						<div class="{new2.element}">
							<g:InlineLabel ui:field="isAllowreplies" />
						</div>
					</div>


			

				<g:FlowPanel ui:field="resultPanel" />
	


			<!--分页 [[ -->
			<div id="rewardlist_page" class="{new2.pager}">
				<div class="{new2.pager-left}">
					每页显示条数
					<select class="{new2.select}">
						<option>5</option>
					</select>
					<div class="{new2.divtext}">共有 <g:InlineLabel ui:field="dataCount" styleName="{new2.divfont}"></g:InlineLabel> 条回复</div><div  class="{new2.divend}"></div>
				</div>

				<div class="{new2.pager-right}">
					<g:FlowPanel ui:field="resultpage" />
				</div>
			</div>
					<span class="{new2.cutline}"></span>
					<div class="{new2.form-line} {new2.form-line-btn}">
						<div class="{new2.element}">
							<span class="{new2.btn}">
								<g:Button ui:field="updateBtn" text="编辑后重发" />
							</span>
						</div>
					</div>
				</div>
			</div>

		</div>

	</g:HTMLPanel>
</ui:UiBinder> 