<?xml version="1.0" encoding="UTF-8"?>
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:p1="urn:import:com.google.gwt.user.cellview.client"
	xmlns:d='urn:import:com.google.gwt.user.datepicker.client'>
	<ui:style src="new2.css" field="new2"></ui:style>
	<g:HTMLPanel>
<div class="{new2.frame-wrap}">
			<!--面包屑 [[ -->
			<g:FlowPanel ui:field="breadCrumbs" />
			<!--面包屑 ]] -->


			<!--查询条件 [[ -->
			<div class="{new2.query-wrap}">
				<div class="{new2.form}">
					<label for="">状态:</label>
					<g:ListBox ui:field="status" styleName="{new2.select}" /> 
					<span class="{new2.nbspbig}"></span> 
					<label for="">创建人:</label>
					<g:TextBox maxLength="30" ui:field="createUser" styleName="{new2.text2}" />
					<span class="{new2.nbspbig}" ></span>
					<label for="">广播时间:</label>
					<d:DateBox ui:field="broadcastingTime" styleName="{new2.middle-text}" />-
					<d:DateBox ui:field="broadcastingTimeEnd" styleName="{new2.middle-text}" />
					
					<span class="{new2.btn}">
						<g:Button ui:field="searchBtn" text="查询" width="100px" />
					</span>
				</div>
			</div>
			<!--查询条件 ]] -->


			<span class="{new2.cutline}"></span>

			<p class="{new2.send-news}">
					<div style="float:right;text-align:right;padding-bottom: 5px;">
						<span class="{new2.btn}">
								<g:Button ui:field="addBtn">发送新广播</g:Button>
						</span>
					</div>
			</p>
			<div class="{new2.divtext}">共有 <g:InlineLabel ui:field="dataCount" styleName="{new2.divfont}"></g:InlineLabel> 条广播</div><div  class="{new2.divend}"></div>
			<div class="{new2.table}">
				<g:FlowPanel ui:field="resultPanel" />
			</div>


			<!--分页 [[ -->
			<div id="rewardlist_page" class="{new2.pager}">
				<div class="{new2.pager-left}">
					每页显示条数
					<select class="{new2.select}">
						<option>10</option>
					</select>
				</div>

				<div class="{new2.pager-right}">
					<g:FlowPanel ui:field="resultpage" />
				</div>
			</div>
			<!--分页 ]] -->

		</div>
	</g:HTMLPanel>
</ui:UiBinder> 