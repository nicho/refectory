<?xml version="1.0" encoding="UTF-8"?>
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:p1="urn:import:com.google.gwt.user.cellview.client"
	xmlns:d='urn:import:com.google.gwt.user.datepicker.client'>
	<ui:style src="new2.css" field="new2"></ui:style>
	<g:HTMLPanel>
		<div class="{new2.employee}">
			<!-- 内容区 [[ -->
			<div class="{new2.content-wrap} {new2.glorylist-wrap}">
				<div class="{new2.content-info}">

					<div class="{new2.news-wrap}">
						<div class="{new2.news-content} {new2.glorylist-content}">

							<div class="{new2.news-list} {new2.remark-list}">

								<div class="{new2.remark-list-info} {new2.clearfix}">
									<span class="{new2.award-wrap}">
										<span class="{new2.award-icon} {new2.quarter-icon}"></span>
									</span>
									<div class="{new2.remark-info-wrap}">
										<p>
											<span class="{new2.remark-content}">
												<g:InlineLabel ui:field="content" />
											</span>
										</p>
										<p>
											<span>
												<g:InlineLabel ui:field="createDate" />
											</span>
											来自
											<span>
												<g:InlineLabel ui:field="createDept" />
											</span>
											<g:Anchor text="回复()" ui:field="replyNumberA" />
											|
											<g:Anchor text="我来回复" ui:field="myreply" />
										</p>
										<g:FlowPanel ui:field="replyPanel" />
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</g:HTMLPanel>
</ui:UiBinder> 