<?xml version="1.0" encoding="UTF-8"?>
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:p1="urn:import:com.google.gwt.user.cellview.client"
	xmlns:d='urn:import:com.google.gwt.user.datepicker.client'>
	<ui:style src="new2.css" field="new2"></ui:style>
	<g:HTMLPanel styleName="{new2.enterprise-reg}">
	  
	  <!-- 1内容 -->
		  <div class="{new2.reg-form}">
		  
           <h4>修改密码：</h4>
           <div class="{new2.form}">
			<span class="{new2.cutline}"></span>
			<!--面包屑 ]] -->
			<div class="{new2.content-wrap}">
				<div class="{new2.form}">
					
					<div class="{new2.form-line}">
						<label class="{new2.label}">账号：</label>
						<div class="{new2.element}">
							<g:TextBox maxLength="10" ui:field="username" styleName="{new2.text}" enabled="false"/>
						</div>
					</div>
                   <div class="{new2.form-line}">
						<label class="{new2.label}">旧密码：</label>
						<div class="{new2.element}">
							<g:PasswordTextBox maxLength="16" ui:field="oldpassword"
								styleName="{new2.text}"></g:PasswordTextBox>
						</div>
					</div>
					<div class="{new2.form-line}">
						<label class="{new2.label}">新密码：</label>
						<div class="{new2.element}">
							<g:PasswordTextBox maxLength="16" ui:field="newpassword"
								styleName="{new2.text}"></g:PasswordTextBox>
						</div>
					</div>
					
					<div class="{new2.form-line}">
						<label class="{new2.label}">确认密码：</label>
						<div class="{new2.element}">
							<g:PasswordTextBox maxLength="16" ui:field="validatePassword"
								styleName="{new2.text}"></g:PasswordTextBox>
						</div>
					</div>
					
					<span class="{new2.cutline}"></span>
					<div class="{new2.form-line} {new2.form-line-btn}">
						<div class="{new2.element}">

							   <div class="{new2.remark} {new2.remark-info}">		
									<div class="{new2.remark-tool}">
						             <g:Button styleName="{new2.button}" text="修 改" ui:field="button" />
									</div>
								</div>
						</div>
					</div>
				</div>
			</div>

		</div>
      </div>

	
	</g:HTMLPanel>
</ui:UiBinder> 