<?xml version="1.0" encoding="UTF-8"?>
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:p1="urn:import:com.google.gwt.user.cellview.client"
	xmlns:d='urn:import:com.google.gwt.user.datepicker.client'>

	<ui:style src="new2.css" field="new2"></ui:style>

	<g:HTMLPanel styleName="{new2.frame-wrap}">
		<!--面包屑 [[ -->
		<g:FlowPanel ui:field="breadCrumbs" />
		<!--面包屑 ]] -->

		<!-- 1内容 -->
		<div class="{new2.content-wrap}">
			<div class="{new2.form}">
				<div class="{new2.form-line}">
					<label class="{new2.label}">
						<span style="color:red">*</span>
						礼品名称：
					</label>
					<div class="{new2.element}">
						<g:TextBox maxLength="20" ui:field="name" styleName="{new2.text}" />		
						
					</div>
				</div>
				<div class="{new2.form-line}">
					<label class="{new2.label6}">礼品概述：</label>
					<div class="{new2.element}">
						<g:TextArea ui:field="summary" visibleLines="3"
							styleName="{new2.textarea}" />						
					</div>
				</div>
				<div class="{new2.form-line}">
					<label class="{new2.label6}">发货周期：</label>
					<div class="{new2.element}">
						<g:TextArea ui:field="dispatchcycle" visibleLines="3"
							styleName="{new2.textarea}" />
					</div>
				</div>
				<div class="{new2.form-line}">
					<label class="{new2.label6}">兑换说明：</label>
					<div class="{new2.element}">
						<g:TextArea ui:field="explains" visibleLines="3"
							styleName="{new2.textarea}" />
					</div>
				</div>
				<div class="{new2.form-line}">
					<label class="{new2.label6}">注意事项：</label>
					<div class="{new2.element}">
						<g:TextArea ui:field="notes" visibleLines="3"
							styleName="{new2.textarea}" />
					</div>
				</div>
				<div class="{new2.form-line}">
					<label class="{new2.label}">礼品类型：</label>
					<div class="{new2.element}">
						<g:ListBox ui:field="type" styleName="{new2.text}" />
					</div>
				</div>
				<div class="{new2.form-line}">
					<label class="{new2.label}">
						品牌：
					</label>
					<div class="{new2.element}">
						<g:TextBox maxLength="20" ui:field="brand" styleName="{new2.text}" />
					</div>
				</div>
				<div class="{new2.form-line}">
					<label class="{new2.label}"><span style="color:red">*</span>礼品图片：</label>
					<div class="{new2.element}">
						<g:FormPanel ui:field="photoForm" encoding="multipart/form-data"
							method="post">
							<g:FileUpload ui:field="photoUpload" name="uploadFormElement"></g:FileUpload>
						</g:FormPanel>
						<g:TextBox ui:field="photo" visible="false"></g:TextBox>
						<g:Button ui:field="photoUploadBtn" visible="false">上传
						</g:Button>
					</div>
				</div>
				<div class="{new2.form-line}">
					<label class="{new2.label60}"></label>
					<div class="{new2.element}">
						<g:Image ui:field="giftImage" width="80px" height="60px"
							visible="false" />
					</div>
				</div>

				<div class="{new2.form-line}">
					<label class="{new2.label}">
						<span style="color:red">*</span>
						兑换积分：
					</label>
					<div class="{new2.element}">
						<g:TextBox maxLength="5" ui:field="integral" styleName="{new2.text}" />
						<g:Label ui:field="integralError"></g:Label>
					</div>
				</div>

				<div class="{new2.form-line}">
					<label class="{new2.label}">
						<span style="color:red">*</span>
						库存：
					</label>
					<div class="{new2.element}">
						<g:TextBox maxLength="5" ui:field="stock" styleName="{new2.text}" />
						<g:Label ui:field="stockError"></g:Label>
					</div>
				</div>
               <div class="{new2.form-line}">
					<label class="{new2.label}"><span style="color:red">*</span>有效期：</label>
					<div class="{new2.element}">
						<d:DateBox ui:field="indate" styleName="{new2.text}"/>
						<g:Label ui:field="indateError"></g:Label>
					</div>
				</div>
				<div class="{new2.form-line}">
					<label class="{new2.label}">
						<span style="color:red">*</span>
						供货方式：
					</label>
					<div class="{new2.element}">
						<g:RadioButton ui:field="supplyinner" name="supplyCheckBox">内部直接提供
						</g:RadioButton>
						<g:RadioButton ui:field="supplyoutter" name="supplyCheckBox">外部货品公司提供
						</g:RadioButton>
					</div>
				</div>

				<div class="{new2.form-line}">
					<label class="{new2.label}">供应商名称：</label>
					<div class="{new2.element}">
						<g:TextBox maxLength="20" ui:field="business" styleName="{new2.text}" />
					</div>
				</div>
				<div class="{new2.form-line}">
					<label class="{new2.label}">供应商地址：</label>
					<div class="{new2.element}">
						<g:TextBox maxLength="200" ui:field="address" styleName="{new2.text}" />
					</div>
				</div>
				<div class="{new2.form-line}">
					<label class="{new2.label}">供应商电话：</label>
					<div class="{new2.element}">
						<g:TextBox maxLength="11" ui:field="tell" styleName="{new2.text}" />
					</div>
				</div>
				<div class="{new2.form-line}">
					<label class="{new2.label}">服务电话：</label>
					<div class="{new2.element}">
						<g:TextBox maxLength="11" ui:field="servicetell"
							styleName="{new2.text}" />
					</div>
				</div>
				
			

				<span class="{new2.cutline}"></span>
				<div class="{new2.form-line} {new2.form-line-btn}">
					<div class="{new2.element}">
									
						<span class="{new2.btn}">
							<g:Button ui:field="save">保存</g:Button>
						</span>
						<span class="{new2.nbsp}"></span>
						<span class="{new2.btn}">
							<g:Button ui:field="back" styleName="button-ok">返回 </g:Button>
						</span>
					</div>
				</div>
			</div>
		</div>
	</g:HTMLPanel>
</ui:UiBinder>
