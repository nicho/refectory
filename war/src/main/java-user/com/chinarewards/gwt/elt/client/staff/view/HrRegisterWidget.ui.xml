<?xml version="1.0" encoding="UTF-8"?>
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'>
	<ui:style>
		.important {
			font-weight: bold;
		}
	</ui:style>
	<ui:style src="new2.css" field="new2"></ui:style>
	<g:HTMLPanel>
		<div class="{new2.frame-wrap}">
			<!--面包屑 [[ -->
			<div class="{new2.breadcrumb-wrap}">
				<div class="{new2.breadcrumb-wrap}">
					<p class="{new2.breadcrumb-left}">
						<a href="#" style="color:#565656;text-decoration:none;">员工数据</a>
						->
						<span>帐号管理</span>
						->
						<span>添加</span>
					</p>
					<a href="#" class="{new2.breadcrumb-right} {new2.back-btn}"
						style="color:#565656;text-decoration:none;">返回上一页</a>
				</div>
				<span class="{new2.cutline}"></span>
			</div>
			<h3>信息初始化
			</h3>
			<span class="{new2.cutline}"></span>
			<!--面包屑 ]] -->
			<div class="{new2.content-wrap}">
				<div class="{new2.form}">
					<div class="{new2.form-line}">
						<label class="{new2.label}">邮箱：</label>
						<div class="{new2.element}">
							<g:TextBox maxLength="30" ui:field="email" styleName="{new2.text}" />
						</div>
					</div>
					<div class="{new2.form-line}">
						<label class="{new2.label}">账号：</label>
						<div class="{new2.element}">
							<g:TextBox maxLength="10" ui:field="username"
								styleName="{new2.text}" />
						</div>
					</div>

					<div class="{new2.form-line}">
						<label class="{new2.label}">密码：</label>
						<div class="{new2.element}">
							<g:PasswordTextBox maxLength="16" ui:field="password"
								styleName="{new2.text}"></g:PasswordTextBox>
						</div>
					</div>
					<div class="{new2.form-line}">
						<label class="{new2.label}">确认密码：</label>
						<div class="{new2.element}">
							<g:PasswordTextBox maxLength="16" ui:field="validatePassword"
								styleName="{new2.text}"></g:PasswordTextBox>
						</div>
					</div>
					<div class="{new2.form-line}">
						<label class="{new2.label}">姓名：</label>
						<div class="{new2.element}">
							<g:TextBox maxLength="10" ui:field="name" styleName="{new2.text}" />
						</div>
					</div>
					<div class="{new2.form-line}">
						<label class="{new2.label}">联系电话：</label>
						<div class="{new2.element}">
							<g:TextBox maxLength="11" ui:field="tell" styleName="{new2.text}" />
						</div>
					</div>
					<div class="{new2.form-line}">
						<label class="{new2.label}">角色：</label>
						<div class="{new2.element}">
							<g:CheckBox ui:field="admin" text="管理员" />
							<g:CheckBox ui:field="deptMgr" text="部门管理员" />
							<g:CheckBox ui:field="gift" text="礼品管理员" />
							<g:CheckBox ui:field="staff" text="员工" />

						</div>
					</div>
					<span class="{new2.cutline}"></span>
					<div class="{new2.form-line} {new2.form-line-btn}">
						<div class="{new2.element}">
							<span class="{new2.btn}">
								<g:Button ui:field="hrRegisterbutton" text="提交" />
							</span>
						</div>
					</div>
				</div>
			</div>

		</div>


		<!-- <g:Label text="请初始化hr信息后，就可以用hr账号去登录，进行下一步操作！" width="364px" height="16px" 
			/> -->
	</g:HTMLPanel>
</ui:UiBinder> 